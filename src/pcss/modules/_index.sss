// INDEX PAGE
.info
  &--mega-pad
    padding-top: 130px
  &__title
    position: relative
    z-index: 2
    margin-top: 0
    margin-bottom: 20px
    font-size: 54px
    font-weight: 700
    line-height: 1.1
    letter-spacing: -.9px
  &__subtitle
    position: relative
    z-index: 2
    font-size: 14px
    line-height: 1.7
    color: $fontColorA50
  &__short
    position: relative
    z-index: 2
    margin-top: 15px

  &__picture
    &--absolute
      position: absolute
      top: -840px
      left: -220px
      z-index: 1

@media($desktop)
  .info
    &--mega-pad
      padding-top: 100px

@media($tablet)
  .info
    &--mega-pad
      padding-top: 300px
    &__picture
      &--absolute
        top: -1140px
        left: -140px

@media($mobile)
  .info
    &--mega-pad
      padding-top: 185px
    &__picture
      &--absolute
        top: -1160px
        left: -130px
        transform: scale(.8)
        transform-origin: bottom left

    &__title
      font-size: 24px
      letter-spacing: -.4px
      padding-left: 20px
      padding-right: 20px
    &__subtitle
      font-size: 12px
      padding-left: 20px
      padding-right: 20px
    &__short
      font-size: 14px
      padding-left: 20px
      padding-right: 20px


// HOT LINKS
.hot-links
  padding-top: 60px
  position: relative
  z-index: 2
  &__wrapper
    display: flex
    justify-content: space-between
    background: white
    border-radius: 5px
    box-shadow: 0 20px 40px color(black a(10%))
    padding: 45px 0

  &__card
    text-align: center
    position: relative
    flex: 1 1 25%
    position: relative
    &:hover
      .ico
        background-color: color($colorOrageSecondary a(99%))
        border-color: white
        transform: scale(.9)
      .hot-links__card__title
        color: $colorBlueHover
    &::after
      display: block
      content: ' '
      position: absolute
      top: 10px
      bottom: 10px
      right: 0
      background: #D8D8D8
      width: 1px
    &:last-child
      &::after
        display: none
    &__title
      margin-top: 15px
      font-size: 14px
      font-weight: 700
      color: $colorBlue
      transition: color $transitionSpeed ease
    &__label
      display: inline-block
      background: $colorRed
      color: white
      position: absolute
      top: 103px
      left: 50%
      transform: translateX(-50%)
      padding: 4px 15px
      font-size: 10px
      font-weight: 700
      text-align: center

@media($desktop)
  .hot-links
    &__wrapper
      flex-wrap: wrap

@media($tablet)
  .hot-links
    padding-top: 30px
    &__wrapper
      padding: 15px 0 5px 0
    &__card
      flex: 1 1 50%
      margin-bottom: 20px
      .ico
        transform: scale(.8)
      &:hover
        .ico
          transform: scale(.7)
      &::after
        display: none
      &__title
        margin-top: 5px
      &__label
        top: 93px

@media($mobile)
  .hot-links
    padding-top: 23px
    &__card
      &__title
        font-size: 12px
        font-weight: 400

// NEWS
.news
  &__wrapper
    display: flex
    justify-content: space-between
  .owl-stage-outer
    padding-bottom: 30px
    overflow: visible
  &__card
    display: block
    background: white
    border-radius: 5px
    overflow: hidden
    box-shadow: 0 10px 20px color(black a(5%))
    transition: box-shadow $transitionSpeed ease
    &:hover
      box-shadow: 0 10px 30px color(black a(20%))
    &__image
      position: relative
      height: 175px
      overflow: hidden
      img
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        height: 100%
        min-width: 101%
        width: auto !important
    &__content
      padding: 10px 20px
      min-height: 85px

    &__date
      font-size: 12px
      color: $fontColorA50

    &__title
      font-size: 14px
      line-height: 1.35
      margin-top: 10px

@media($mobile)
  .news
    &__card
      &__image
        height: auto
        img
          position: static
          transform: none
          height: auto
          max-width: 101%

// CALC
.calculator
  &__wrapper
    display: flex
    flex-direction: column
    background: white
    border-radius: 5px
    box-shadow: 0 20px 40px color(black a(10%))
  &__head
    padding: 50px 7% 30px 7%
    text-align: center

  &__location-input
    max-width: 500px
    margin-left: auto
    margin-right: auto
    margin-top: 30px

  &__inputs
    background: #FDFAF2
    padding: 40px 5% 35px 5%
    .col--4-6
      border-right: 1px solid color(black a(20%))
      margin-right: 20px
    &__templates
      font-size: 14px
      a
        margin-top: 20px
        color: $colorBlue
        display: flex
        align-items: center
        transition: color $transitionSpeed ease
        &:hover
          color: $colorBlueHover
        .ico
          flex: 0 0 43px
          align-self: flex-start
        span
          display: inline-block
      &__new
        span
          display: inline
          border-bottom: 1px dashed $colorBlue


  &__cta
    padding: 20px 5% 20px 5%
    &__clear
      font-size: 14px
      display: inline-block
      margin-left: 10px
      a
        display: inline-block
        margin-left: 5px
        color: $colorBlue
        border-bottom: 1px dashed $colorBlue
        transition: color $transitionSpeed ease
        &:hover
          color: $colorBlueHover

  &__results
    border-top: 1px solid $borderColor
    padding: 25px 5% 30px 5%
    &__head
      display: flex
      justify-content: space-between
      align-items: center
      margin-bottom: 20px
      .h3-title
        margin-bottom: 0

    &__filters
      display: inline-block
      font-size: 14px
      cursor: pointer
    &__filter
      display: inline-block
      color: $colorBlue
      position: relative
      padding: 5px 10px
      &:last-child
        padding-right: 0
      &:after
        content: ''
        position: absolute
        height: 3px
        left: 50%
        right: 50%
        transition: $transitionSpeed all
        opacity: 0
        bottom: -3px
        background-color: $colorOrageSecondary
      &:hover
        color: $colorBlueHover
      &.active
        color: $fontColor
        &:after
          left: 0px
          right: 0px
          opacity: 1

    &__row
      display: flex
      justify-content: flex-start
      overflow-x: scroll
      margin-right: -5%
      margin-left: -5%
      padding-left: 5%
    &__card
      flex: 0 0 208px
      margin-right: 10px
      display: flex
      flex-direction: column
      border: 1px solid $borderColor
      border-radius: 5px
      transition: all $transitionSpeed ease-in-out
      cursor: pointer
      &:hover
        box-shadow: 0 10px 40px color(black a(10%))
        .calculator__results__card__points
          .ico-location
            background-image: svg-load('../../images/svg/ico-location-orange.svg')
      &__image
        height: 70px
        position: relative
        img
          max-width: 90px
          position: absolute
          top: 50%
          left: 50%
          transform: translate(-50%, -50%)

      &__title
        flex: 1
        font-size: 10px
        line-height: 1
        padding: 10px 5px 15px 5px
        text-align: center
        border-bottom: 1px solid $borderColor
      &__content
        padding: 0 20px 25px 20px
      &__price
        display: flex
        justify-content: space-between
        align-items: center
        border-bottom: 1px solid $borderColor
        padding-top: 10px
        padding-bottom: 10px
      &__mainprice
        font-size: 18px
        line-height: 1.2
        font-weight: 700
      &__deliverable
        font-size: 14px
      &__features
        font-size: 12px
        padding-top: 15px
        padding-bottom: 20px
        span
          display: block
          margin-bottom: 5px
      &__points
        font-size: 12px
        border-top: 1px solid $borderColor
        padding-top: 10px
        padding-bottom: 15px
        span
          margin-left: 10px
          vertical-align: middle


@media($tablet)
  .calculator
    &__location
      &__input
        margin-top: 15px
    &__inputs
      padding: 25px 5% 5px 5%
      .col--4-6
        border-right: 0
        margin-right: 0
      &__templates
        margin-left: -5%
        margin-right: -5%
        padding-left: 5%
        font-size: 12px
        display: flex
        justify-content: flex-start
        overflow-x: scroll
        width: auto
        padding-bottom: 15px
        a
          flex: 0 0 auto
          margin-top: 10px
          margin-right: 10px

          .ico
            transform: scale(.8)
            transform-origin: 0 50%
            flex: 0 0 35px
            align-self: flex-start
    &__results
      &__filters
        display: none
      &__card
        flex: 0 0 210px

@media($mobile)
  .calculator
    &__head
      padding: 30px 30px 20px 30px
    &__inputs
      padding: 25px 30px 5px 30px
      &__templates
        margin-left: -30px
        margin-right: -30px
        padding-left: 30px
    &__cta
      padding-left: 30px
      padding-right: 30px
    &__results
      padding-top: 10px
      padding-left: 30px
      padding-right: 30px
      &__head
        margin-bottom: 0px
      .h3-title
        font-size: 14px
      &__row
        margin-left: -30px
        margin-right: -30px
        padding-left: 30px





// FEATURES
.features
  margin-left: 10%
  margin-right: 10%
  &__card
    text-align: center
    margin-top: 30px
    &__title
      font-size: 14px
      line-height: 1.425
      margin: 0 20%
      a
        color: $colorBlue
    &--request
      border: 2px dashed color(black a(10%))
      border-radius: 15px
      padding: 25px
      color: #555555
      transition: all $transitionSpeed ease
      &:hover
        background: white
        .ico
          background-color: color($colorOrageSecondary a(99%))

      .ico
        margin-bottom: 15px
        transition: all $transitionSpeed ease
      a
        color: $colorBlue
        transition: all $transitionSpeed ease
        &:hover
          color: $colorBlueHover

@media($desktop)
  .features
    margin-left: 0
    margin-right: 0

@media($mobile)
  .features
    &__card
      margin-top: 15px
      &__title
        font-size: 11px
      &--request
        padding-left: 5px
        padding-right: 5px


// API
.api
  .row--stetch-child
    overflow-x: scroll
  &__card
    flex: 0 0 310px
    margin-right: 25px
    display: flex
    flex-direction: column
    background: white
    border-radius: 5px
    overflow: hidden
    margin-top: 30px
    &:last-child
      margin-right: 0
    &__image
      position: relative
      overflow: hidden
      height: 120px
      img
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%,-50%)
        height: 100%
        min-width: 101%
    &__tags
      position: absolute
      bottom: 0
      left: 40px
    &__tag
      display: inline-block
      margin-right: 3px
      font-weight: 700
      background: $colorOrageSecondary
      padding: 5px 10px
      &--blue
        background: $colorBlueSecondary

    &__content
      flex: 1 1 auto
      display: flex
      flex-direction: column
      padding: 25px 30px 40px 40px
    &__title
      font-weight: 700
      line-height: 1.25
      margin-bottom: 10px
    &__description
      font-size: 12px
      line-height: 1.66
    &__price
      padding-top: 20px
      margin-top: auto
      color: #555555
      font-weight: 700
      margin-bottom: 25px

@media($tablet)
  .api
    &__card
      flex: 0 0 260px
      margin-right: 10px
      &__content
        padding: 25px 20px 40px 20px

// TESTIMONIALS
.testimonials
  opacity: 1
  .owl-item
    opacity: 0.5
    transition: opacity $transitionSpeed ease
    &.center
      opacity: 1
  &__nav-item
    width: 800px
    margin-left: auto
    margin-right: auto
  &__card
    position: relative
    max-width: 500px
    margin-left: auto
    margin-right: auto
    margin-top: 30px
    margin-bottom: 60px
    &__content
      padding: 30px
      padding-left: 80px
      background: white
      border-radius: 5px
      box-shadow: 0 20px 40px color(black a(10%))
    &__image
      position: absolute
      top: 30px
      left: -60px
      size: 120px
      border: 2px dashed $fontColor
      padding: 10px
      border-radius: 50%
      overflow: hidden
      img
        max-width: 100%
        display: block
        overflow: hidden
        border-radius: 50%

    &__text
      font-size: 14px
      line-height: 1.7
      margin-bottom: 20px
    &__author
      border-top: 1px solid #DEDEDE
      padding-top: 10px
      font-size: 14px
      line-height: 1.42
      span
        display: block
        color: $colorBlue


@media($tablet)
  .testimonials
    .owl-dots
      margin-top: -45px
    &__nav-item
      width: auto
    &__card
      padding-top: 30px
      &__image
        size: 90px
        left: 50%
        top: -15px
        transform: translateX(-50%)
      &__content
        padding: 30px
        padding-top: 60px


@media($mobile)
  .testimonials
    &__nav-item
      margin-left: 20px
      margin-right: 20px
    &__card
      &__text
        font-size: 12px
        line-height: 1.7
      &__author
        font-size: 12px
      &__content
        padding: 20px
        padding-top: 55px

// CLIENTS
.clients
  padding: 0 5%
  img
    max-width: 100%
    mix-blend-mode: multiply

@media($tablet)
  .clients
    img
      margin-bottom: 15px
