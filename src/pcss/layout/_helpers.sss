// TEXT STYLES
.dib
  display: inline-block

.db
  display: block !important

.bold
  font-weight: 700

.italic
  font-style: italic

.fz10
  font-size: 10px

.fz12
  font-size: 12px

.fz14
  font-size: 14px

.fz20
  font-size: 20px

.lh18
  line-height: 1.8

.lh2
  line-height: 2

.img-fluid
  max-width: 100%

.c-blue
  color: $colorBlue
  &--dashed
    border-bottom: 1px dashed $colorBlue

a.c-blue
  transition: all $transitionSpeed ease
  &:hover
    color: $colorBlueHover

.c-validation
  color: $colorValidation


.t-vertical
  position: absolute
  top: 0
  left: 0%

  span
    display: inline-block
    transform: rotate(-90deg) translateX(-5px)
    transform-origin: left top


@media($desktop)
  .fz20
    font-size: 18px

@media($tablet)
  .mt20--tablet
    margin-top: 20px
  .mt40--tablet
    margin-top: 40px

  .ml0--tablet
    margin-left: 0

@media($mobile)
  .mt20--mobile
    margin-top: 20px
  .mt30--mobile
    margin-top: 30px

  .pl20--mobile
    padding-left: 20px

  .img--100--mobile
    max-width: 100px

  .fz20
    font-size: 16px

@media($mobile-s)
  .text-center--mobile-s
    text-align: center
