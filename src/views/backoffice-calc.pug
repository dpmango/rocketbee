                            option() Санкт-питербург
                            option() Санкт-питербург

                        i.ico.ico-arrow-right.mt45
                        .ui-group
                          label откуда:
                          .ui-select.ui-select--autocompleate
                            input(type="text" placeholder='введите город...').js-cityToCompleate

                  .calculator__inputs
                
                    .ui-row.ui-row--inline
                      .ui-group
                        label вес<span>, кг</span>:
                        .ui-input.ui-input--short
                          input(type="text")
                          .ui-input__placeholder кг
                      .ui-group
                        label габариты<span>, см</span>:
                        .ui-input-collection
                          .ui-input.ui-input--short
                            input(type="text" value='1500')
                          .ui-input.ui-input--short
                            input(type="text" value='1500')
                          .ui-input.ui-input--short
                            input(type="text" value='1500')      
                        .ui-input__placeholder см
                        .ui-group__validation
                          i.ico.ico-warn
                          span негабаритный груз
                          
                    // checkboxes
                    .ui-group
                      label дополнительные опции:
                      .row.row--column--mobile
                        .col.col--3-6
                          .ui-checkbox
                            input(type="checkbox" name="checkbox" id="checkbox_1")
                            label(for="checkbox_1") 
                              span Возможность примерки
                          .ui-checkbox
                            input(type="checkbox" name="checkbox" id="checkbox_2" checked)
                            label(for="checkbox_2") 
                              span Наложенный платеж
                          .ui-checkbox
                            input(type="checkbox" name="checkbox" id="checkbox_3")
                            label(for="checkbox_3") 
                              span Дороже 15 тыс. рублей

                        .col.col--3-6
                          .ui-checkbox
                            input(type="checkbox" name="checkbox" id="checkbox_4" checked)
                            label(for="checkbox_4") 
                              span Доставка до дверей
                          .ui-checkbox
                            input(type="checkbox" name="checkbox" id="checkbox_5" checked)
                            label(for="checkbox_5") 
                              span Оплата банковской картой

                  // calc cta
                  .calculator__cta
                    a(href='#').btn.btn--primary.btn--h40 
                      span Рассчитать
                    .calculator__cta__clear
                      span или
                      a(href="#") очистить
                  
                .col.col--2-6
