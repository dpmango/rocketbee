      .app__content
        
        // BACKOFFICE HEAD
        .backoffice.section-m-t--smaller
          .container
            .row
              .col.col--auto
                .backoffice__head
                  .backoffice__head__navi
                    a(href='backoffice-shops.html') Магазины
                    a(href='backoffice-calc.html').active Калькулятор
                    a(href='backoffice-settings.html') Настройки
                  
                  .backoffice__head__details
                    .backoffice__head__price
                      span баланс:
                      span 1280 ₽
                    a(href='#').btn.btn--primary 
                      span ПОПОЛНИТЬ
                  
        // CALCULATOR
        .calculator.section-m-t.section-m-t--small
          .container.container--0-mobile
            .calculator__wrapper
              // new class here
              .row.backoffice__calc
                .col.col--4-6
                  .calculator__head
                    h3.h3-title Калькулятор доставки
                    .calculator__location-input
                      .ui-row.ui-row--collapse
                        .ui-group
                          label откуда:
                          select.js-styler__select(data-search='true')
