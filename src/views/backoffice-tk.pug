                              input(type="checkbox" name="checkbox" id="check_7")
                              label(for="check_7") 
                                span
                            span Мой курьер
                          .backoffice__tk-row__status

                          .backoffice__tk-row__action
                            a(href='#').backoffice__shop__link настроить
                                    
                                        
      include shared/footer.pug
